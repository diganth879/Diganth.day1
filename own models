# Import libraries
from sklearn.linear_model import LinearRegression
import numpy as np

# Step 1 — Training data
# Hours studied → Exam score
X = np.array([[1], [2], [3], [4], [5]])
y = np.array([35, 45, 55, 65, 75])

# Step 2 — Create model
model = LinearRegression()

# Step 3 — Train model (learning)
model.fit(X, y)

# Step 4 — Predict new value
study_hours = [[6]]
predicted_score = model.predict(study_hours)

print("Predicted exam score:", predicted_score[0])

<!DOCTYPE html>
<html>
<head>
    <title>Load Balancer Simulation</title>
</head>
<body>

<h2>Load Balancer (Round Robin)</h2>
<button onclick="sendRequest()">Send Request</button>

<p id="result"></p>

<script>
let servers = ["Server 1", "Server 2", "Server 3"];
let current = 0;

function sendRequest() {
    let assignedServer = servers[current];

    document.getElementById("result").innerHTML =
        "Request sent to: " + assignedServer;

    current = (current + 1) % servers.length;
}
</script>

</body>
</html>
